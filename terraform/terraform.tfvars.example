# Example Terraform variables file
# Copy this to terraform.tfvars and customize for your environment

# Project configuration
project_name = "voting-app"
environment  = "dev"

# Deployment target
# Set to true for Azure AKS, false for local cluster (minikube/k3s/microk8s)
deploy_to_azure = false

# Azure configuration (only used if deploy_to_azure = true)
azure_location = "East US"

# Kubernetes configuration
kubernetes_version = "1.28"
node_count         = 2
node_vm_size       = "Standard_B2s"
enable_auto_scaling = true
min_node_count     = 1
max_node_count     = 5
os_disk_size_gb    = 30

# Local cluster configuration (only used if deploy_to_azure = false)
# Leave empty to use default kubeconfig
local_kubeconfig_path    = ""
local_kubeconfig_context = ""

